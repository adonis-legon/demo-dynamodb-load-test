# AWS Environment Configuration Template
# Copy this file to .env.aws and fill in your specific values

# AWS Configuration
AWS_PROFILE=your-aws-profile-name
AWS_REGION=us-east-1

# Spring Profile Configuration
SPRING_PROFILES_ACTIVE=aws
ENVIRONMENT=aws

# CloudFormation Stack Configuration
STACK_NAME=dynamodb-load-test-main

# ECS Configuration
ECS_CLUSTER_NAME=aws-dynamodb-load-test-cluster
ECS_TASK_DEFINITION=aws-dynamodb-load-test

# ECS Task Configuration Parameters
TASK_CPU=4096
TASK_MEMORY=8192
CONTAINER_PORT=8080
DESIRED_COUNT=1
MAX_CAPACITY=10
MIN_CAPACITY=0

# ECR Configuration
ECR_REPOSITORY_NAME=dynamodb-load-test

# DynamoDB Configuration
TABLE_NAME=aws-dynamodb-load-test
READ_CAPACITY_UNITS=5
WRITE_CAPACITY_UNITS=25
BILLING_MODE=PAY_PER_REQUEST
POINT_IN_TIME_RECOVERY_ENABLED=false
DELETION_PROTECTION_ENABLED=false

# SSM Parameter Configuration
SSM_PARAMETER_PREFIX=/dynamodb-load-test

# CloudWatch Logging Configuration
LOG_RETENTION_DAYS=7

# Application Configuration Parameters
CONCURRENCY_LIMIT=10
TOTAL_ITEMS=100
MAX_CONCURRENCY_PERCENTAGE=100.0
DUPLICATE_PERCENTAGE=5.0
CLEANUP_AFTER_TEST=false

# Performance Optimization Configuration - Enhanced for better duplicate error accuracy
MAX_RETRY_ATTEMPTS=3
BASE_DELAY_MS=50
MAX_DELAY_MS=1000
ENABLE_ENHANCED_DUPLICATE_TRACKING=true

# JVM Performance Tuning
JAVA_OPTS="-XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+UseStringDeduplication -XX:+OptimizeStringConcat -Xms2g -Xmx6g"

# Networking Configuration
VPC_CIDR=10.0.0.0/16
PUBLIC_SUBNET_CIDR=10.0.1.0/24
PRIVATE_SUBNET_CIDR=10.0.2.0/24
AVAILABILITY_ZONE=us-east-1a

# CloudFormation Template Configuration
TEMPLATE_S3_KEY_PREFIX=dynamodb-load-test/

# Security Configuration
# Enable encryption and security features in AWS
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true

# Cost Optimization Settings
# Use Fargate Spot for cost optimization (can be overridden)
USE_FARGATE_SPOT=false

# Monitoring and Alerting
ENABLE_DETAILED_MONITORING=true
ENABLE_CONTAINER_INSIGHTS=true